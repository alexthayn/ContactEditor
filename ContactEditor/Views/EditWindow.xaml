<Window x:Class="ContactEditor.Views.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:local="clr-namespace:ContactEditor"
        mc:Ignorable="d"
        DataContext="{Binding EditViewModel, Source={StaticResource Locator}}"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        Title="Add/Edit Contact" Height="550" Width="300">
    <Grid>
        <Grid.Resources>
            <Thickness x:Key="InfoMargin">0,10,0,0</Thickness>
        </Grid.Resources>

        <StackPanel Margin="10">
            <!--First Name-->
            <TextBlock Text="First Name"/>
            <TextBox
                Margin="0,5,0,0"
                Padding="2"
                FontWeight="Bold"
                Text="{Binding CurrentContact.FirstName, Mode=TwoWay}"/>
            
            <!--Last Name-->
            <TextBlock Text="Last Name"/>
            <TextBox
                Margin="0,5,0,0"
                Padding="2"
                FontWeight="Bold"
                Text="{Binding CurrentContact.LastName, Mode=TwoWay}"/>
            
            <!--Company-->
            <TextBlock Text="Company Name"/>
            <TextBox
                Margin="0,5,0,0"
                Padding="2"
                FontWeight="Bold"
                Text="{Binding CurrentContact.Company, Mode=TwoWay}"/>
            
            <!--JobTitle-->
            <TextBlock Text="Job Title"/>
            <TextBox
                Margin="0,5,0,0"
                Padding="2"
                FontWeight="Bold"
                Text="{Binding CurrentContact.JobTitle, Mode=TwoWay}"/>
            
            <!--MobilePhone-->
            <TextBlock Text="Mobile Phone"/>
            <TextBox
                Margin="0,5,0,0"
                Padding="2"
                FontWeight="Bold"
                Text="{Binding CurrentContact.MobilePhone, Mode=TwoWay}"/>
            
            <!--Birthday-->
            <TextBlock Margin="{StaticResource InfoMargin}" 
                       Text="Birthday"/>
            <TextBox
                Margin="0,5,0,0"
                FontWeight="Bold"
                Text="{Binding CurrentContact.Birthday, Mode=TwoWay}"/>

            <!--Email-->
            <TextBlock Text="Email"/>
            <TextBox
                Margin="0,5,0,0"
                Padding="2"
                FontWeight="Bold"
                Text="{Binding CurrentContact.Email, Mode=TwoWay}"/>
            
            <!--Address-->
            <TextBlock Text="Address"/>
            <TextBox
                Margin="0,5,0,0"
                Padding="2"
                FontWeight="Bold"
                Text="{Binding CurrentContact.Address, Mode=TwoWay}"/>
            
            <!--Notes-->
            <TextBlock Text="Notes"/>
            <TextBox
                Margin="0,5,0,0"
                Padding="2"
                FontWeight="Bold"
                Height="50"
                TextWrapping="Wrap"
                Text="{Binding CurrentContact.Notes, Mode=TwoWay}"/>
            
            <!--Save and Cancel Buttons-->
            <StackPanel
                Margin="0,10,0,0"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Button Padding="5"
                        Command="{Binding SaveDataCommand}"
                        Content="Save"/>

                <Button Margin="10,0,0,0"
                        Padding="5"
                        Content="Cancel">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <ei:CallMethodAction MethodName="Close" TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
